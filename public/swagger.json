    "/api/downloader/tiktok": {
      "get": {
        "tags": ["Docs"],
        "summary": "Download TikTok video (via query)",
        "parameters": [
          {
            "in": "query",
            "name": "url",
            "required": true,
            "schema": { "type": "string" },
            "description": "Video URL",
            "example": "https://www.tiktok.com/@username/video/1234567890"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "status": true,
                  "data": {
                    "title": "Video title",
                    "author": "username",
                    "video": "https://download-link.mp4",
                    "music": "https://music-link.mp3"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Post"],
        "summary": "Download TikTok video (via JSON body)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["url"],
                "properties": {
                  "url": {
                    "type": "string",
                    "example": "https://www.tiktok.com/@username/video/1234567890"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "status": true,
                  "data": {
                    "title": "Video title",
                    "author": "username",
                    "video": "https://download-link.mp4",
                    "music": "https://music-link.mp3"
                  }
                }
              }
            }
          }
        }
      }
    },
