{
  "openapi": "3.0.0",
  "info": {
    "title": "Rafzhost API",
    "version": "1.0.0",
    "description": "ðŸ“– Dokumentasi resmi API Rafzhost"
  },
  "servers": [
    { "url": "https://api.rafzhost.xyz", "description": "Main Server" },
    { "url": "https://rafzhost-api.vercel.app", "description": "Vercel Server" }
  ],
  "paths": {
    "/api/hello": {
      "get": {
        "tags": ["Misc"],
        "summary": "Simple hello GET",
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "tags": ["Misc"],
        "summary": "Test POST hello",
        "requestBody": {
          "content": { "application/json": { "schema": { "type": "object" } } }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/ping": {
      "get": {
        "tags": ["Misc"],
        "summary": "Cek koneksi API",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/downloader/tiktok": {
      "get": {
        "tags": ["Downloader"],
        "summary": "Download TikTok video",
        "parameters": [
          {
            "in": "query",
            "name": "url",
            "required": true,
            "schema": { "type": "string" },
            "description": "Video URL"
          }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/m/brat": {
      "get": {
        "summary": "Generate Brat image/video",
        "parameters": [
          {
            "name": "text",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "Teks yang ingin ditampilkan"
          },
          {
            "name": "media",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["png", "gif", "webp", "mp4"]
            },
            "description": "Format output yang diinginkan"
          },
          {
            "name": "delay",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 150 },
            "description": "Delay per frame (ms), hanya untuk media animasi"
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil generate",
            "content": {
              "image/png": { "schema": { "type": "string", "format": "binary" } },
              "image/gif": { "schema": { "type": "string", "format": "binary" } },
              "image/webp": { "schema": { "type": "string", "format": "binary" } },
              "video/mp4": { "schema": { "type": "string", "format": "binary" } }
            }
          },
          "400": { "description": "Request invalid" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Generate Brat image/video via POST",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "media": { "type": "string", "enum": ["png", "gif", "webp", "mp4"] },
                  "delay": { "type": "integer", "default": 150 }
                },
                "required": ["text", "media"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Berhasil generate",
            "content": {
              "image/png": { "schema": { "type": "string", "format": "binary" } },
              "image/gif": { "schema": { "type": "string", "format": "binary" } },
              "image/webp": { "schema": { "type": "string", "format": "binary" } },
              "video/mp4": { "schema": { "type": "string", "format": "binary" } }
            }
          },
          "400": { "description": "Request invalid" },
          "500": { "description": "Server error" }
        }
      }
    }
  }
}
