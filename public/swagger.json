{
  "openapi": "3.0.0",
  "info": {
    "title": "Rafzhost API",
    "version": "1.0.0",
    "description": "Dokumentasi API Rafzhost"
  },
  "servers": [
    { "url": "https://api.rafzhost.xyz", "description": "Production" },
    { "url": "http://localhost:3000", "description": "Local" }
  ],
  "paths": {
    "/api/downloader/tiktok": {
      "get": {
        "tags": ["Downloader"],
        "summary": "Download TikTok (no watermark)",
        "parameters": [
          { "in": "query", "name": "url", "required": true, "schema": { "type": "string" }, "description": "TikTok URL" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Server Error" }
        }
      }
    },
    "/api/ttdl": {
      "get": {
        "tags": ["Downloader"],
        "summary": "Download TikTok (ttdl endpoint)",
        "parameters": [
          { "in": "query", "name": "url", "required": true, "schema": { "type": "string" }, "description": "TikTok URL" }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/ping": {
      "get": {
        "tags": ["Misc"],
        "summary": "Ping endpoint",
        "responses": { "200": { "description": "pong" } }
      }
    }
  }
}
